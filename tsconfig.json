{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"jsx": "react",
		"experimentalDecorators": true,
		"sourceMap": true,
		"skipDefaultLibCheck": true,
		"strict": false,
		"noImplicitAny": false,
		"lib": [ "es2017", "dom", "ES2015" ],
		"types": [ "webpack-env" ],
		"skipLibCheck": true,
		"isolatedModules": true,
		"paths": {
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@models/*": ["models/*"],
			"@network/*": ["network/*"],
			"@utils/*": ["utils/*"]
		},
		"baseUrl": "./src"
	},
	"exclude": [
		"bin",
		"node_modules",
		"common/vueJs/"
	]
}